{
    "compilerOptions": {
      "target": "ESNext",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "dist/api",
      "rootDir": "src/api",
      "baseUrl": "src",
      "noImplicitAny": false,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "paths": {
        "api/*": ["src/api/*"],
        "shared/*": ["src/shared/*"]
      }
    },
    "include": ["src/api/**/*", "src/types/**/*", "src/shared/**/*"],
    "exclude": ["node_modules", "dist"]
  }