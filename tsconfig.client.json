{
    "compilerOptions": {
      "target": "ESNext",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "jsx": "react-jsx",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "dist/client",
      "rootDir": "src/client",
      "baseUrl": ".",
      "noImplicitAny": false,
      "allowArbitraryExtensions": true,
      "paths": {
        "@/*": ["src/client/*"],
        "client":["src/client/*"],
        "shared/*":["src/shared/*"]
      }
    },
    "include": ["src/client/**/*", "src/shared/**/*"],
    "exclude": ["node_modules", "dist"]
  }